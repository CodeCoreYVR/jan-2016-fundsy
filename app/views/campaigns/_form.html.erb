<%= simple_form_for @campaign do |f| %>
  <%= f.input :name, label: "Campaign Name", input_html: {class: "small-field"} %>
  <%= f.input :description %>
  <%= f.input :goal, as: :string %>
  <%= f.input :end_date %>
  <%# f.file_field :image  %>
  <%= f.input :image %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
